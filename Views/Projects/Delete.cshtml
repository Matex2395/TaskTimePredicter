@model TaskTimePredicter.Models.Project

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<h1>Borrar Proyecto</h1>

<h3>¿Estás seguro de que quieres borrar este proyecto?</h3>
<div>
    <h4>Projecto Seleccionado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre del Proyecto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class = "col-sm-2">
            Descripción del Proyecto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista de Proyectos</a>
    </form>
</div>
