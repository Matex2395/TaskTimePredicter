@model IEnumerable<TaskTimePredicter.Models.Subcategory>

@{
    ViewData["Title"] = "Lista de Subcategorías";
}

<h1>Lista de Subcategorías</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Subcategoría</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre de Subcategoría
            </th>
            <th>
                Descripción de Subcategoría
            </th>
            <th>
                Categoría Asociada
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubcategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubcategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.SubcategoryId">Detalles</a> |
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SubcategoryId">Editar</a>
                @* <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SubcategoryId">Eliminar</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
