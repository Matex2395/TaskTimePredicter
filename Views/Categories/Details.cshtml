@model TaskTimePredicter.Models.Category

@{
    ViewData["Title"] = "Detalles Categoría";
}

<h1>Detalles de Categoría</h1>

<div>
    <h4>Categoría Seleccionada</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de Categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            Descripción de Categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Volver a la Lista de Categorías</a>
</div>
